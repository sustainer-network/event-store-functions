{
  "substitutions": {
    "_TITLE": "Event Store",
    "_SERVICE": "sustainer-network",
    "_SERVICE_DOMAIN": "sustainer.network",
    "_GCP_PROJECT": "sustainernetwork",
    "_GCP_REGION": "us-central1",
    "_GCP_DNS_ZONE": "network",
    "_TYPE": "event-store",
    "_CORS_ALLOW_HEADERS": "Authorization Content-Type",
    "_ESP_OPTIONS": "--cors_allow_methods=POST GET,--cors_allow_headers=Authorization Content-Type,--cors_allow_credentials,"
  },
  "steps": [
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud functions deploy ${_SERVICE}-staging-${_TYPE}-add --trigger-http --runtime=nodejs10 --entry-point=add --project=${_GCP_PROJECT} --region=${_GCP_REGION} --set-env-vars=NODE_ENV=staging,STORE_INSTANCE=staging-event-store"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud functions deploy ${_SERVICE}-staging-${_TYPE}-hydrate --trigger-http --runtime=nodejs10 --entry-point=hydrate --project=${_GCP_PROJECT} --region=${_GCP_REGION} --set-env-vars=NODE_ENV=staging,STORE_INSTANCE=staging-event-store"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run deploy ${_SERVICE}-staging-${_TYPE} --image=gcr.io/endpoints-release/endpoints-runtime-serverless:1.36.0 --allow-unauthenticated --project=${_GCP_PROJECT} --region=${_GCP_REGION} --platform=managed"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction start --zone=${_GCP_DNS_ZONE} --project=${_GCP_PROJECT}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction add ghs.googlehosted.com. --name=${_TYPE}.staging.${_SERVICE_DOMAIN} --zone=${_GCP_DNS_ZONE} --type=CNAME --ttl=300 --project=${_GCP_PROJECT}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction execute --zone=${_GCP_DNS_ZONE} --project=${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run domain-mappings create --platform=managed --service=${_SERVICE}-staging-${_TYPE} --domain=${_TYPE}.staging.${_SERVICE_DOMAIN} --project=${_GCP_PROJECT} --region=${_GCP_REGION} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "sed -e 's/#_ADD_NAME/${_SERVICE}-staging-${_TYPE}-add/g; s/#_HYDRATE_NAME/${_SERVICE}-staging-${_TYPE}-hydrate/g; s/#_HOST/${_TYPE}.staging.${_SERVICE_DOMAIN}/g; s/#_GCP_PROJECT/${_GCP_PROJECT}/g; s/#_GCP_REGION/${_GCP_REGION}/g; s/#_TITLE/Staging ${_TITLE}/g' doc.json > doc.staging.json"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud endpoints services deploy /workspace/doc.staging.json --project=${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run services update ${_SERVICE}-staging-${_TYPE} --platform=managed --project=${_GCP_PROJECT} --region=${_GCP_REGION} --set-env-vars=\"^|^ENDPOINTS_SERVICE_NAME=${_TYPE}.staging.${_SERVICE_DOMAIN}|ESP_ARGS=--rollout_strategy=managed,${_ESP_OPTIONS}\""
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta functions add-iam-policy-binding ${_SERVICE}-staging-${_TYPE}-add --member serviceAccount:31066734336-compute@developer.gserviceaccount.com --role roles/cloudfunctions.invoker"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta functions add-iam-policy-binding ${_SERVICE}-staging-${_TYPE}-hydrate --member serviceAccount:31066734336-compute@developer.gserviceaccount.com --role roles/cloudfunctions.invoker"
      ]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "yarn",
      "args": ["install"]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "yarn",
      "args": ["test"]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud functions deploy ${_SERVICE}-${_TYPE}-add --trigger-http --runtime=nodejs10 --entry-point=add --set-env-vars=NODE_ENV=production,STORE_INSTANCE=staging-event-store"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud functions deploy ${_SERVICE}-${_TYPE}-hydrate --trigger-http --runtime=nodejs10 --entry-point=hydrate --set-env-vars=NODE_ENV=production,STORE_INSTANCE=staging-event-store"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run deploy ${_SERVICE}-${_TYPE} --image=gcr.io/endpoints-release/endpoints-runtime-serverless:1.36.0 --allow-unauthenticated --project=${_GCP_PROJECT} --platform=managed --region=${_GCP_REGION}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction start --zone=${_GCP_DNS_ZONE} --project=${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction add ghs.googlehosted.com. --name=${_TYPE}.${_SERVICE_DOMAIN} --zone=${_GCP_DNS_ZONE} --type=CNAME --ttl=300 --project=${_GCP_PROJECT}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction execute --zone=${_GCP_DNS_ZONE} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run domain-mappings create --platform=managed --service=${_SERVICE}-${_TYPE} --domain=${_TYPE}.${_SERVICE_DOMAIN} --project=${_GCP_PROJECT} --region=${_GCP_REGION} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "sed -e 's/#_ADD_NAME/${_SERVICE}-${_TYPE}-add/g; s/#_HYDRATE_NAME/${_SERVICE}-${_TYPE}-hydrate/g; s/#_HOST/${_TYPE}.${_SERVICE_DOMAIN}/g; s/#_GCP_PROJECT/${_GCP_PROJECT}/g; s/#_GCP_REGION/${_GCP_REGION}/g; s/#_TITLE/${_TITLE}/g' doc.json > doc.production.json"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud endpoints services deploy /workspace/doc.production.json --project=${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run services update ${_SERVICE}-${_TYPE} --platform=managed  --project=${_GCP_PROJECT} --region=${_GCP_REGION} --set-env-vars=\"^|^ENDPOINTS_SERVICE_NAME=${_TYPE}.${_SERVICE_DOMAIN}|ESP_ARGS=--rollout_strategy=managed,${_ESP_OPTIONS}\""
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta functions add-iam-policy-binding ${_SERVICE}-${_TYPE}-add --member serviceAccount:31066734336-compute@developer.gserviceaccount.com --role roles/cloudfunctions.invoker --project=${_GCP_PROJECT} --region=${_GCP_REGION}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta functions add-iam-policy-binding ${_SERVICE}-${_TYPE}-hydrate --member serviceAccount:31066734336-compute@developer.gserviceaccount.com --role roles/cloudfunctions.invoker --project=${_GCP_PROJECT} --region=${_GCP_REGION}"
      ]
    }
  ]
}
